# Push Chain Crosschain Module Testing Makefile
# Unified Testing Commands

.PHONY: setup test test-html test-coverage clean help

# Default target
help:
	@echo "Push Chain Crosschain Module Testing"
	@echo "====================================="
	@echo ""
	@echo "Available Commands:"
	@echo "  setup             - Install required testing libraries (run once)"
	@echo "  test              - Run all crosschain module tests"
	@echo "  test-html         - Run tests and generate HTML report"
	@echo "  test-coverage     - Run tests with code coverage analysis"
	@echo "  test-quick        - Quick test execution without reports"
	@echo "  test-all          - Complete test suite + all reports"
	@echo "  clean             - Clean generated test files"
	@echo "  help              - Show this help message"
	@echo ""
	@echo "Generated Reports:"
	@echo "  ðŸ“Š x/crosschain/test_report.html - Interactive test results"
	@echo "  ðŸ“ˆ x/crosschain/coverage.html - Code coverage analysis"
	@echo ""
	@echo "Quick Start:"
	@echo "  1. make -f Makefile.testing setup     # Install libraries (once)"
	@echo "  2. make -f Makefile.testing test-all  # Run complete test suite"

# Setup - Install required testing libraries
setup:
	@echo "ðŸ”§ Installing required testing libraries..."
	@echo "==========================================="
	@echo "Installing go-test-report..."
	@go install github.com/vakenbolt/go-test-report@latest
	@echo "Installing go-junit-report..."
	@go install github.com/jstemmer/go-junit-report@latest
	@echo "Installing junit2html..."
	@go install github.com/alexec/junit2html@latest
	@echo ""
	@echo "âœ… Setup complete! Libraries installed:"
	@echo "   â€¢ go-test-report - Beautiful HTML test reports"
	@echo "   â€¢ go-junit-report - JUnit XML report generation"
	@echo "   â€¢ junit2html - HTML conversion utility"
	@echo ""
	@echo "ðŸš€ Ready to run tests! Try:"
	@echo "   make -f Makefile.testing test-all"

# Run basic tests
test:
	@echo "ðŸ§ª Running crosschain module tests..."
	@echo "======================================"
	cd x/crosschain && go test -v ./... || true
	@echo "âœ… Tests completed"

# Run tests with quick execution
test-quick:
	@echo "âš¡ Quick test execution..."
	@echo "========================="
	cd x/crosschain && go test ./... || true
	@echo "âœ… Quick tests completed"

# Run tests with coverage analysis
test-coverage:
	@echo "ðŸ“Š Running tests with coverage analysis..."
	cd x/crosschain && go test -v -coverprofile=coverage.out ./... || true
	cd x/crosschain && go tool cover -html=coverage.out -o coverage.html || true
	@echo "âœ… Coverage report: x/crosschain/coverage.html"
	@echo "ðŸŒ Open: file://$(PWD)/x/crosschain/coverage.html"

# Generate HTML test report
test-html:
	@echo "ðŸ§ª Running tests and generating HTML report..."
	@echo "=============================================="
	cd x/crosschain && go test -v -json ./... > test_results.json 2>&1 || true
	cd x/crosschain && cat test_results.json | go-test-report -o test_report.html -t "Push Chain Crosschain Test Report" 2>/dev/null || echo "âš ï¸  Run 'make -f Makefile.testing setup' first to install libraries"
	@echo "âœ… HTML report generated: x/crosschain/test_report.html"
	@echo "ðŸŒ Open: file://$(PWD)/x/crosschain/test_report.html"

# Complete test suite with all reports
test-all: test-coverage test-html
	@echo ""
	@echo "ðŸŽ‰ Complete testing finished!"
	@echo "ðŸ“Š Generated reports:"
	@echo "   â€¢ x/crosschain/test_report.html - Interactive test results"
	@echo "   â€¢ x/crosschain/coverage.html - Code coverage analysis"
	@echo ""
	@echo "ðŸ“ˆ Test Results: All comprehensive validation tests executed"

# Clean generated files
clean:
	@echo "ðŸ§¹ Cleaning generated test files..."
	@rm -f x/crosschain/*.json x/crosschain/*.html x/crosschain/*.out x/crosschain/*.xml x/crosschain/*.log 2>/dev/null || true
	@echo "âœ… Clean completed" 